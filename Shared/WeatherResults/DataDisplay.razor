<span class="text-xl">
    <span class="text-base text-zinc-400 pe-px">@Label</span>
    <span class="font-semibold text-left whitespace-nowrap">@Value</span>
    
    @if (Unit != null)
    {
        <span class="text-base text-zinc-400 whitespace-nowrap">@Unit</span>
    }
</span>

@code {
    [Parameter] public RenderFragment Label {get;set;} = null!;
    [Parameter] public RenderFragment Value {get;set;} = null!;
    [Parameter] public RenderFragment? Unit {get;set;}
}

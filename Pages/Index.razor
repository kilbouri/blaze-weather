@page "/"
@using System.Threading.Tasks;


<div 
    id="searchContainer"
    class="mx-auto pt-[25dvh] flex flex-col items-center gap-8 px-2"
>
    <h1 class="text-3xl font-semibold text-white"><BlazeLogo /></h1>

    <form class="max-w-lg flex w-full" @onsubmit="WeatherSearchSubmit">
        <input 
            type="text" 
            placeholder="City..."
            id="searchLocation" 
            class="w-full grow rounded-l-full px-4 py-2"
            @bind-value="location" 
        />
        
        <button 
            type="submit"
            id="searchSubmit"
            class="bg-green-500 min-w-0 text-white font-bold rounded-r-full ps-4 pe-5 py-2"
        >
            <span class="oi" data-glyph="arrow-right"></span>
        </button>
    </form>
</div>

@if (submitted) {
    <p>
        You submitted the form, but the behaviour isn't implemented yet... please hold :)
    </p>

    <p>Location: @location</p>
}

@code {
    private string location = "";
    private bool submitted = false;

    private Task WeatherSearchSubmit()
    {
        submitted = true;
        return Task.CompletedTask;
    }
} 
